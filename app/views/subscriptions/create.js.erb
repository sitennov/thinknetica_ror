<% if @subscription.errors.present? %>
  <% @subscription.errors.full_messages.each do |message| %>
    $(".subscription").html('<%= j message %>');
  <% end %>
  <% else %>
    $("#question-<%= @subscription.question.id%> .subscription").replaceWith('<%= j link_to 'Unsubscribe', subscription_path(@subscription), method: :delete, remote: true %>')
<% end %>
